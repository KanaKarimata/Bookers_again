<div class="container">
  <div class="row">
  <%= render 'users/list', book: @book_new, user: @book_user %>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.id) do %>
            <%= image_tag @book_user.get_profile_image(100,100) %><br>
            <label><%= @book_user.name %></label>
          <% end %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm"=>"本当に消しますか" %></td>
      </tr>
    </tbody>
  </table>
    </div>
  </div>
</div>
