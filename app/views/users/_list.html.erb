<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "Edit", edit_user_path(@user.id) %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <label>Title</label><br>
  <%= f.text_field :title %><br>
 
  <label>Opinion</label><br>
  <%= f.text_area :body %><br>
 
  <%= f.submit "Creat Book" %>
 
<% end %>
 