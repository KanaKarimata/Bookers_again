<div class="container">
  <div class="row">
  <%= render 'list', book: @book, user: @user %>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <th>image</th>
        <th>name</th>
      </thead>
    <tbody>
      <% @users.each do |user| %>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      <% end %>
    </tbody>
    </table>
  </div>
  </div>
</div>