<%= render 'list', book: @book_new, user: @user %>

<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td>
       <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
       <% end %>
     </td>
     <td>
       <%= link_to book_path(book.id) do %>
        <%= book.title %>
       <% end %>
     </td>
     <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
</table>